{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
