{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~app/*": ["./src/app/*"],
      "~pages/*": ["./src/pages/*"],
      "~views/*": ["./src/views/*"],
      "~widgets/*": ["./src/widgets/*"],
      "~usecases/*": ["./src/usecases/*"],
      "~entities/*": ["./src/entities/*"],
      "~shared/*": ["./src/shared/*"]
    }
  }
}
